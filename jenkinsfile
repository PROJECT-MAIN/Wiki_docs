pipeline {
  agent any

  environment {
    MAVEN_HOME = '/opt/maven' // Adapter si nécessaire
    MVN_CMD = "${MAVEN_HOME}/bin/mvn"
  }

  tools {
    maven 'Maven_3' // Le nom défini dans "Global Tool Configuration"
  }

  stages {
    stage('Checkout') {
      steps {
        git credentialsId: 'github-ssh', url: 'git@github.com:ton-org/ton-repo.git', branch: 'main'
      }
    }

    stage('Build') {
      steps {
        echo '🏗️ Compilation du projet...'
        sh 'mvn clean package'
      }
    }

    stage('Deploy to Nexus') {
      steps {
        echo '📦 Déploiement sur Nexus...'
        sh 'mvn deploy -s settings.xml'
      }
    }
  }

  post {
    success {
      echo '✅ Build et déploiement terminés avec succès !'
    }
    failure {
      echo '❌ Le pipeline a échoué.'
    }
  }
}
